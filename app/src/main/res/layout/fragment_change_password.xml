<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".change_password">

    <!-- ScrollView to make the layout scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ResetPassword">

            <ImageView
                android:id="@+id/top_wave2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="top_wave2"
                android:scaleType="fitXY"
                android:src="@drawable/topwave_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/oldPasswordInput"
                    android:layout_width="350dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_gray"
                    android:hint="Old Password"
                    android:textColorHint="@color/gray"
                    android:fontFamily="@font/lilita_one"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="24dp"
                android:text="New Password"
                android:fontFamily="@font/lilita_one"
                android:textColor="@color/yellow"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/oldPasswordInput" />

            <EditText
                android:id="@+id/newPasswordInput"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_gray"
                android:hint="New Password"
                android:textColorHint="@color/gray"
                android:fontFamily="@font/lilita_one"
                android:inputType="textPassword"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="24dp"
                android:text="Confirm Password"
                android:fontFamily="@font/lilita_one"
                android:textColor="@color/yellow"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newPasswordInput" />

            <EditText
                    android:id="@+id/confirmPasswordInput"
                    android:layout_width="350dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rounded_gray"
                    android:textColorHint="@color/gray"
                    android:fontFamily="@font/lilita_one"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />


            <Button
                android:id="@+id/btResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#041AE0"
                android:fontFamily="@font/lilita_one"
                android:text="Reset Password"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:cornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmPasswordInput" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/lilita_one"
                android:text="Old Password"
                android:textColor="@color/yellow"
                android:textSize="21sp"
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.355" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
