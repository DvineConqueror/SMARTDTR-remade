<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".teacher_create_appointment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/vector" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="98dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/imageView23"
            app:srcCompat="@drawable/img_1"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="105dp"
            android:layout_marginBottom="99dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView21"
            app:layout_constraintEnd_toEndOf="@+id/imageView21"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView22"
            app:layout_constraintTop_toTopOf="@+id/imageView21"
            app:srcCompat="@drawable/group_76"
            tools:ignore="ContentDescription" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:shadowColor="@color/white"
            android:contentDescription="Back Button"
            app:icon="@drawable/baseline_arrow_back_ios_24"
            app:iconTint="@color/brightred"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="@color/white"
            app:strokeWidth="0dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lilita_one"
            android:layout_marginBottom="60dp"
            android:text="Make an Appointment"
            android:textColor="#1604F4"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView21"
            tools:ignore="HardcodedText,MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeSelector"
            android:layout_width="347dp"
            android:layout_height="370dp"
            android:layout_marginTop="360dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/gradient_background_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="56dp"

                android:fontFamily="@font/lilita_one"
                android:text="Subject"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTime"
                tools:ignore="HardcodedText,MissingConstraints" />

            <TextView
                android:id="@+id/tvRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/lilita_one"
                android:letterSpacing="0.1"
                android:text="Room"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/tvSubject"
                tools:ignore="HardcodedText,MissingConstraints"
                tools:layout_editor_absoluteX="13dp" />

            <TextView
                android:id="@+id/tvStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/lilita_one"
                android:letterSpacing="0.05"
                android:text="Students"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRoom"
                tools:ignore="HardcodedText,SpUsage" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Time"
                android:textColor="@color/white"
                android:fontFamily="@font/lilita_one"
                android:letterSpacing="0.1"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.042"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,MissingConstraints" />

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#0008E2"
                android:fontFamily="@font/lilita_one"
                android:text="Create"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="HardcodedText,MissingConstraints" />

            <Spinner
                android:id="@+id/spnrEndTime"
                android:layout_width="97dp"
                android:background="@drawable/custom_edittext"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.358"
                app:layout_constraintStart_toEndOf="@+id/spnrStartTime"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spnrStartTime"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/lilita_one"
                android:layout_width="97dp"
                android:layout_height="48dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toEndOf="@+id/tvTime"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etSubject"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/lilita_one"
                android:text="Enter a subject"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.442"
                app:layout_constraintStart_toEndOf="@+id/tvSubject"
                app:layout_constraintTop_toBottomOf="@+id/spnrStartTime" />

            <EditText
                android:id="@+id/etRoom"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/custom_edittext"
                android:fontFamily="@font/lilita_one"
                android:text="Enter a room"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.442"
                app:layout_constraintStart_toEndOf="@+id/tvRoom"
                app:layout_constraintTop_toBottomOf="@+id/tvSubject" />

            <ImageButton
                android:id="@+id/btStudentList"
                android:layout_width="48dp"
                android:layout_height="28dp"
                android:layout_marginTop="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_list_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toEndOf="@+id/tvStudents"
                app:layout_constraintTop_toBottomOf="@+id/etRoom" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <CalendarView
            android:id="@+id/calendarView"
            style="CustomCalendarView"
            android:layout_width="350dp"
            android:layout_height="320dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
