<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brightred"
    android:id="@+id/main"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableBottom="@drawable/baseline_key_24"
        android:drawablePadding="0dp"
        android:text="change password" />

    <Button
        android:id="@+id/btn_user_details"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableBottom="@drawable/baseline_account_circle_24"
        android:drawablePadding="0dp"
        android:text="user details" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableBottom="@drawable/baseline_history_24"
        android:drawablePadding="0dp"
        android:text="history" />

    <Button
        android:id="@+id/btn_log_out"
        android:layout_width="20dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableBottom="@drawable/baseline_logout_24"
        android:drawablePadding="0dp"
        android:text="log out" />
</LinearLayout>
